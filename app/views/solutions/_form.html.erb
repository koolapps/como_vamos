<%= simple_form_for [solution.problem, solution] do |f| %>
  <%= f.input :explanation, as: :text, input_html: { rows: 10 }, placeholder: t('markdown_enabled'), hint: t('.explanation_hint') %>

  <%= f.input :source_code, as: :file, hint: t('.source_code_hint', extensions: SolutionUploader.allowed_extensions.to_sentence) %>

  <%= f.button :submit, data: {"disable-with" => t('application.processing')} %>
<% end %>
